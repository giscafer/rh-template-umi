{
  "name": "@roothub/components",
  "version": "1.0.0",
  "description": "RootHub 中后台前端开发组件",
  "license": "MIT",
  "author": "giscafer",
  "main": "dist/lib/index.js",
  "module": "dist/lib/index.esm.js",
  "typings": "dist/lib/index.d.ts",
  "scripts": {
    "build": "father-build",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "docs:build": "dumi build",
    "docs:deploy": "node ./scripts/gh-pages-publish.js",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "postpublish": "node ./scripts/notice.js",
    "release": "npm run build && npm publish",
    "start": "dumi dev",
    "test": "jest -u",
    "test:coverage": "jest --coverage"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@roothub/helper": "1.0.0",
    "ahooks": "^3.5.2",
    "amis-formula": "^2.0.1",
    "array-move": "^4.0.0",
    "classnames": "^2.3.1",
    "lodash": "^4.17.21",
    "react-sortable-hoc": "^2.0.0",
    "virtualizedtableforantd4": "^1.1.6"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.1",
    "@types/enzyme": "^3.10.12",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.182",
    "@types/react-test-renderer": "^18.0.0",
    "@umijs/test": "^4.0.6",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.7",
    "cz-conventional-changelog": "^3.3.0",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "father-build": "^1.22.3",
    "fs-extra": "^10.1.0",
    "gh-pages": "^4.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.7",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "shelljs": "^0.8.5",
    "ts-jest": "^27.1.2",
    "yorkie": "^2.0.0"
  },
  "peerDependencies": {
    "@ant-design/icons": "^4.7.0",
    "@ant-design/pro-components": "^1.1.3",
    "antd": "^4.20.7",
    "react": "^18.1.0",
    "react-router-dom": "^6.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  }
}
