{
  "type": "drawer",
  "title": "属性配置",
  "api": "/api/v1/xxxx/${id}/property",
  "primaryField": "propertyId",
  "body": [
    {
      "id": "base",
      "label": "基本信息",
      "properties": [
        {
          "id": "propertyId",
          "label": "属性ID",
          "dataType": "string",
          "renderType": "input",
          "required": true,
          "disabledOn": "data.propertyId",
          "validator": [{ "type": "maxLength", "value": "40" }]
        },
        {
          "id": "name",
          "label": "属性名称",
          "dataType": "string",
          "renderType": "input",
          "required": true,
          "validator": [{ "type": "maxLength", "value": "40" }]
        },
        {
          "id": "transformType",
          "label": "是否开启转换",
          "dataType": "string",
          "renderType": "radio",
          "required": true,
          "valueEnum": [
            { "label": "开启", "value": "Linear" },
            { "label": "不开启", "value": "None" }
          ]
        },
        {
          "id": "rawMin,rawMax",
          "label": "原始值范围",
          "dataType": "string",
          "renderType": "numberRange",
          "required": true,
          "dependencies": [
            {
              "type": "visible",
              "fieldName": "transformType",
              "valueList": ["Linear"]
            }
          ]
        },
        {
          "id": "targetMin,targetMax",
          "label": "目标值范围",
          "dataType": "string",
          "renderType": "numberRange",
          "required": true,
          "dependencies": [
            {
              "type": "visible",
              "fieldName": "transformType",
              "valueList": ["Linear"]
            }
          ]
        },
        {
          "id": "description",
          "label": "描述",
          "renderType": "textArea"
        }
      ]
    },
    {
      "id": "collection",
      "namePrefix": "collection",
      "label": "采集配置",
      "properties": [
        {
          "id": "registerType",
          "label": "寄存器类型",
          "dataType": "string",
          "renderType": "select",
          "required": true,
          "valueEnum": [
            {
              "label": "线圈输出寄存器（BIT R/W）",
              "value": "1"
            },
            {
              "label": "数字量输入寄存器（BIT R）",
              "value": "2"
            },
            {
              "label": "测试寄存器（WORD R/W）",
              "value": "3"
            }
          ]
        },
        {
          "id": "valueType",
          "label": "数据类型",
          "renderType": "select",
          "required": true,
          "dataType": "string",
          "valueEnum": [
            {
              "label": "Bool",
              "value": "Bool"
            },
            {
              "label": "Byte",
              "value": "Byte"
            },
            {
              "label": "String",
              "value": "String"
            },
            {
              "label": "Word",
              "value": "Word"
            },
            {
              "label": "Float",
              "value": "Float"
            },
            {
              "label": "Double",
              "value": "Double"
            }
          ],
          "dependencies": [
            {
              "fieldName": "registerType",
              "rules": [
                {
                  "valueEnum": [
                    {
                      "label": "Bool",
                      "value": "Bool"
                    }
                  ],
                  "valueList": ["1", "2"]
                },
                {
                  "valueEnum": [
                    {
                      "label": "Bool",
                      "value": "Bool"
                    },
                    {
                      "label": "Byte",
                      "value": "Byte"
                    },
                    {
                      "label": "String",
                      "value": "String"
                    },
                    {
                      "label": "Word",
                      "value": "Word"
                    },
                    {
                      "label": "Float",
                      "value": "Float"
                    },
                    {
                      "label": "Double",
                      "value": "Double"
                    }
                  ],
                  "valueList": ["3", "4", "5", "6"]
                }
              ],
              "type": "linkage"
            }
          ]
        },
        {
          "id": "offset",
          "label": "偏移",
          "renderType": "input",
          "required": false,
          "dataType": "int",
          "defaultValue": 0,
          "dependencies": [
            {
              "fieldName": "registerType",
              "type": "visible",
              "valueList": ["3", "4", "5", "6"]
            }
          ],
          "validator": [{ "type": "range", "value": [0, 15] }]
        },
        {
          "id": "count",
          "label": "长度",
          "dataType": "int",
          "renderType": "input",
          "defaultValue": 8,
          "required": false,
          "validator": [
            {
              "type": "expression",
              "value": "${collection.offset+value<=16}",
              "message": "偏移与长度之和不能超过16"
            }
          ],
          "dependencies": [
            {
              "fieldName": "registerType",
              "type": "visible",
              "valueList": ["3", "4", "5", "6"]
            },
            {
              "fieldName": "valueType",
              "type": "visible",
              "valueList": ["Byte"]
            }
          ]
        },
        {
          "dataType": "string",
          "dependencies": [
            {
              "fieldName": "registerType",
              "rules": [
                {
                  "valueEnum": [
                    {
                      "label": "读写",
                      "value": "All"
                    },
                    {
                      "label": "只读",
                      "value": "Read"
                    },
                    {
                      "label": "只写",
                      "value": "Write"
                    }
                  ],
                  "valueList": ["1", "3", "5"]
                },
                {
                  "valueEnum": [
                    {
                      "label": "只读",
                      "value": "Read"
                    }
                  ],
                  "valueList": ["2", "4", "6"]
                }
              ],
              "type": "linkage"
            }
          ],
          "id": "authority",
          "label": "读写类型",
          "renderType": "radio",
          "required": true,
          "valueEnum": [
            {
              "label": "读写",
              "value": "All"
            },
            {
              "label": "只读",
              "value": "Read"
            },
            {
              "label": "只写",
              "value": "Write"
            }
          ]
        },
        {
          "id": "length",
          "label": "长度",
          "dataType": "int",
          "dependencies": [
            {
              "fieldName": "valueType",
              "type": "visible",
              "valueList": ["String"]
            }
          ],
          "renderType": "input",
          "required": true,
          "validator": [
            {
              "type": "range",
              "value": [0, 512]
            }
          ]
        }
      ]
    }
  ]
}
